@page
@using Microsoft.AspNetCore.Http.Features
@model TwoFactorAuthenticationModel
@{
    ViewData["Title"] = "Autenticación de dos factores (2FA)"; //Two-factor authentication (2FA)
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
@{
    var consentFeature = HttpContext.Features.Get<ITrackingConsentFeature>();
    @if (consentFeature?.CanTrack ?? true)
    {
        @if (Model.Is2faEnabled)
        {
            if (Model.RecoveryCodesLeft == 0)
            {
                <div class="alert alert-danger">
                    <strong>No te quedan códigos de recuperación. </strong> @*You have no recovery codes left.*@
                    <p>
                        Usted debe <a asp-page="./GenerateRecoveryCodes">generar un nuevo conjunto de códigos de recuperación </a>
                        antes de poder iniciar sesión con un código de recuperación.
                    </p>
                   @* You must <a asp-page="./GenerateRecoveryCodes"> generate a new set of recovery codes </a>
                         before you can log in with a recovery code. *@
                </div>
            }
            else if (Model.RecoveryCodesLeft == 1)
            {
                <div class="alert alert-danger">
                    <strong>Te queda 1 código de recuperación.</strong> @*You have 1 recovery code left.*@
                    <p>Puede <a asp-page="./GenerateRecoveryCodes">generar un nuevo conjunto de códigos de recuperación</a>.</p> @*You can/////generate a new set of recovery codes*@
                </div>
            }
            else if (Model.RecoveryCodesLeft <= 3)
            {
                <div class="alert alert-warning">
                    <strong>Te quedan @Model.RecoveryCodesLeft códigos de recuperación.</strong> @*You have/////recovery codes left.*@
                    <p>Debería <a asp-page="./GenerateRecoveryCodes">generar un nuevo conjunto de códigos de recuperación</a>.</p> @*You should//////////generate a new set of recovery codes*@
                </div>
            }

            if (Model.IsMachineRemembered)
            {
                <form method="post" style="display: inline-block">
                    <button type="submit" class="btn btn-primary">Olvídate de este navegador</button> @*Forget this browser*@
                </form>
            }
            <a asp-page="./Disable2fa" class="btn btn-primary">Deshabilitar 2FA</a> @*Disable 2FA*@
            <a asp-page="./GenerateRecoveryCodes" class="btn btn-primary">Restablecer códigos de recuperación</a> @*Reset recovery codes*@
        }

        <h4>Aplicación de autenticación</h4> @*Authenticator app*@
        @if (!Model.HasAuthenticator)
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">Agregar aplicación de autenticación</a> @*Add authenticator app*@
        }
        else
        {
            <a id="enable-authenticator" asp-page="./EnableAuthenticator" class="btn btn-primary">Configurar la aplicación de autenticación</a> @*Set up authenticator app*@
            <a id="reset-authenticator" asp-page="./ResetAuthenticator" class="btn btn-primary">Restablecer la aplicación de autenticaciónp</a> @*Reset authenticator app*@
        }
    }
    else
    {
        <div class="alert alert-danger">
            <strong>No se ha aceptado la política de privacidad y cookies</strong> @*Privacy and cookie policy have not been accepted.*@
            <p>Debe aceptar la política antes de poder habilitar la autenticación de dos factores.</p> @*You must accept the policy before you can enable two factor authentication*@
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
